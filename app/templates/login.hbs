<div class="container">
	<div class="row">
		<div class="col-md-8 col-md-offset-2">
			<div id="loginFormWrapepr" class="form-wrapper">
				<form {{action 'authenticate' on="submit"}}>
					<div class="form-group">
						<label for="loginInputUsername">Username</label>
						{{input type="text" value=identification class="form-control" id="loginInputUsername"}}
					</div>
					<div class="form-group">
						<label for="loginInputPassword">Password</label>
						{{input type="password" value=password class="form-control" id="loginInputPassword"}}
					</div>
					<button class="btn btn-primary">Login!</button>
				</form>
			</div>
		</div>
	</div>
</div>
