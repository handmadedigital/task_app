{{#my-modal title='Add Employee'  ok='addEmployee' close='removeModal'}}
  <form {{action 'ok' on='submit' target=view}}>
    <div class="form-group">
      <label>First Name</label>
      {{input class="form-control" value=first_name}}
    </div>
    <div class="form-group">
      <label>Last Name</label>
      {{input class="form-control" value=last_name}}
    </div>
    <div class="form-group">
      <label>Email</label>
      {{input type="email" class="form-control" value=email}}
    </div>
    <div class="form-group">
      <label>Phone Number</label>
      {{input type="tel" class="form-control" value=phone}}
    </div>
  </form>
{{/my-modal}}