<div class="container">
	<div class="row">
		<div class="col-md-8 col-md-offset-2">
			<div id="registerFormWrapepr" class="form-wrapper">
				<form {{action 'register' on="submit"}}>
					<div class="form-group">
						<label for="registerInputUsername">Username</label>
						{{input type="text" value=username class="form-control" id="registerInputUsername"}}
					</div>
					<div class="form-group">
						<label for="registerInputEmail">Email Address</label>
						{{input type="text" value=email class="form-control" id="registerInputEmail"}}
					</div>
					<div class="form-group">
						<label for="registerInputPassword">Password</label>
						{{input type="password" value=password class="form-control" id="registerInputPassword"}}
					</div>
					<button class="btn btn-primary">Register!</button>
				</form>
			</div>
		</div>
	</div>
</div>
