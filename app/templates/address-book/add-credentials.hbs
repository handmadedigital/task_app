<div id="addCredentialsWrapper">
	<h1>Add Company Credentials</h1>
	<div class="row">
		<div class="col-md-12">
			<div class="addCredentialFormWrapper">
				<form {{action 'addCredentials' on="submit"}}>
					<div class="credential-group-form-wraper">
						<div class="row">
							<div class="col-md-9">
								<div class="form-group">
									<label>Select a credential group</label>
									{{view "select" class="form-control" content=groups optionValuePath="content.id" optionLabelPath="content.name" value=groupCredential prompt="Please select a group"}}
								</div>
							</div>
							<div class="col-md-3">
								<button class="btn btn-success" {{action 'showModal' 'add-credential-group-modal' model}}>Add new credential group</button>
							</div>
						</div>
					</div>
					<div class="credential-option-form-wrapper">
						<div class="row">
							<div class="col-md-9">
								<div class="form-group">
									<label>Select a credential group</label>
									{{view "select" class="form-control" content=groups optionValuePath="content.id" optionLabelPath="content.name" value=groupCredential prompt="Please select a group"}}
								</div>
							</div>
							<div class="col-md-3">
								<button class="btn btn-success" {{action 'showModal' 'add-credential-option-modal' model}}>add a new credential option</button>
							</div>
						</div>
					</div>
					<div class="form-group">
						<label>Credential</label>
						{{input type="text" value=credential class="form-control"}}
					</div>
					<button type="submit" class="btn btn-primary">send</button>
				</form>
			</div>
		</div>
	</div>
</div>